{
	"name": "kronos/log",
	"type": "library",
	"description": "PSR-3 compliant logging component",
	"homepage": "https://github.com/kronostechnologies/kronos-log",
	"license": "MIT",
	"keywords": [
		"kronos",
		"log",
		"logging",
		"psr"
	],
	"autoload": {
		"psr-4": {
			"Kronos\\Log\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kronos\\Tests\\Log\\": "tests/"
		}
	},
	"require": {
		"php": "^7.4 || ^8.1",
		"psr/log": "^1.0",
		"php-http/guzzle6-adapter": "^2.0"
	},
	"suggest": {
		"guzzlehttp/guzzle": "Required for LogDNA writer",
		"sentry/sentry": "Required for Sentry writer",
		"fluent/logger": "Required for Fluentd writer"
	},
	"require-dev": {
		"guzzlehttp/guzzle": "6.5.8",
		"sentry/sentry": "3.7.0",
		"fluent/logger": "1.0.1",
		"phpunit/phpunit": "9.5.24",
		"vimeo/psalm": "4.26.0",
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"phpcompatibility/php-compatibility": "9.3.5",
		"cyclonedx/cyclonedx-php-composer": "3.10.1"
	},
  "config": {
    "platform": {
      "php": "7.4"
    },
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"cyclonedx/cyclonedx-php-composer": true
		}
  }
}
