{
	"name": "kronos/log",
	"type": "library",
	"description": "PSR-3 compliant logging component",
	"homepage": "https://github.com/kronostechnologies/kronos-log",
	"license": "MIT",
	"keywords": [
		"kronos",
		"log",
		"logging",
		"psr"
	],
	"autoload": {
		"psr-4": {
			"Kronos\\Log\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kronos\\Tests\\Log\\": "tests/"
		}
	},
	"require": {
		"php": "^8.1",
		"psr/log": "^3.0"
	},
	"suggest": {
		"guzzlehttp/guzzle": "Required for LogDNA writer",
		"sentry/sentry": "Required for Sentry writer",
		"fluent/logger": "Required for Fluentd writer"
	},
	"require-dev": {
		"guzzlehttp/guzzle": "7.8.0",
		"fluent/logger": "1.0.1",
		"phpunit/phpunit": "10.5.1",
		"vimeo/psalm": "5.16.0",
		"dealerdirect/phpcodesniffer-composer-installer": "1.0.0",
		"phpcompatibility/php-compatibility": "9.3.5",
		"cyclonedx/cyclonedx-php-composer": "5.0.0",
		"php-http/guzzle7-adapter": "1.0.0",
		"sentry/sentry": "4.0.1"
	},
  "config": {
    "platform": {
      "php": "8.1"
    },
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"cyclonedx/cyclonedx-php-composer": true,
			"php-http/discovery": true
		}
  }
}
