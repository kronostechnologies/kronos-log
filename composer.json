{
	"name": "kronos/log",
	"type": "library",
	"description": "PSR-3 compliant logging component",
	"homepage": "https://github.com/kronostechnologies/kronos-log",
	"license": "MIT",
	"keywords": [
		"kronos",
		"log",
		"logging",
		"psr"
	],
	"autoload": {
		"psr-4": {
			"Kronos\\Log\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kronos\\Tests\\Log\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.2",
		"psr/log": "^1.0",
		"php-http/guzzle6-adapter": "^2.0"
	},
	"suggest": {
		"guzzlehttp/guzzle": "Required for LogDNA writer",
		"sentry/sentry": "Required for Sentry writer",
		"graylog2/gelf-php": "Required for Graylog writer",
		"fluent/logger": "Required for Fluentd writer"
	},
	"require-dev": {
		"guzzlehttp/guzzle": "^6.2",
		"sentry/sentry": "^3.3",
		"graylog2/gelf-php": "~1.5",
		"fluent/logger": "^1.0",
		"phpunit/phpunit": "^8.5",
		"vimeo/psalm": "^4.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/php-compatibility": "^9.3",
		"cyclonedx/cyclonedx-php-composer": "^3.10"
	},
  "config": {
    "platform": {
      "php": "7.4"
    },
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"cyclonedx/cyclonedx-php-composer": true
		}
  }
}
