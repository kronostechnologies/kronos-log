{
  "name": "kronos/log",
  "type": "library",
  "description": "PSR-3 compliant logging component",
  "homepage": "https://github.com/kronostechnologies/kronos-log",
  "license": "MIT",
  "keywords": [
    "kronos",
    "log",
    "logging",
    "psr"
  ],
  "autoload": {
    "psr-4": {
      "Kronos\\Log\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kronos\\Tests\\Log\\": "tests/"
    }
  },
  "repositories": [
    {
      "name": "equisoft/fluent-logger-php",
      "type": "vcs",
      "url": "https://github.com/kronostechnologies/fluent-logger-php.git"
    }
  ],
  "require": {
    "php": "^8.4",
    "psr/log": "^3.0",
    "equisoft/fluent-logger-php": "1.0.0"
  },
  "suggest": {
    "guzzlehttp/guzzle": "Required for LogDNA writer",
    "sentry/sentry": "Required for Sentry writer",
    "fluent/logger": "Required for Fluentd writer"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "7.10.0",
    "phpunit/phpunit": "12.5.4",
    "vimeo/psalm": "6.14.3",
    "dealerdirect/phpcodesniffer-composer-installer": "1.2.0",
    "phpcompatibility/php-compatibility": "9.3.5",
    "cyclonedx/cyclonedx-php-composer": "6.0.0",
    "php-http/guzzle7-adapter": "1.1.0",
    "sentry/sentry": "4.19.1"
  },
  "config": {
    "platform": {
      "php": "8.4.12"
    },
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "cyclonedx/cyclonedx-php-composer": true,
      "php-http/discovery": true
    }
  }
}
